.wrap {
  padding: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: calc(100vh - 0px);
  width: 100%;
}
.vtop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #FFFFFF;
  z-index: 999999;
}
.vtop .title {
  position: relative;
  color: #303030;
  font-size: 24px;
  line-height: 80rpx;
}
.vtop .search {
  background: #F3F4F5;
  height: 68rpx;
  margin: 20rpx 40rpx 15rpx 40rpx;
  padding-left: 40rpx;
  border-radius: 50px;
}
.vtop .search text {
  color: #a6a7a8;
  font-size: 14px;
}
.logo-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
}
.user .avatar {
  width: 116rpx;
  height: 116rpx;
  border-radius: 116rpx;
  overflow: hidden;
}
.user .name {
  font-size: 20px;
  font-weight: 500;
}
.jifen .tab {
  position: relative;
  background-color: #FFFFFF;
  width: 234rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.jifen .tab .title {
  font-weight: 550;
}
.jifen .tab .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.jifen .tab:nth-child(1) .icon {
  background-image: -webkit-linear-gradient(left, #84D787, #5FBB92);
  background-image: linear-gradient(to right, #84D787, #5FBB92);
}
.jifen .tab:nth-child(2) .icon {
  background-image: -webkit-linear-gradient(left, #F5D553, #F0B347);
  background-image: linear-gradient(to right, #F5D553, #F0B347);
}
.jifen .tab:nth-child(2) .icons {
  background-image: -webkit-linear-gradient(left, #dadada, #dadada);
  background-image: linear-gradient(to right, #dadada, #dadada);
}
.jifen .tab:nth-child(3) .icon {
  background-image: -webkit-linear-gradient(left, #ee6c6c, #f0513c);
  background-image: linear-gradient(to right, #ee6c6c, #f0513c);
}
.border-box {
  box-shadow: 0 0px 24px rgba(231, 231, 231, 0.65);
  border-radius: 16rpx;
}
.menu image {
  width: 38rpx;
  height: 38rpx;
}
.border-bottom {
  border-bottom: 1rpx solid #F6F6F6;
  position: relative;
}
.hover-class {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
  -webkit-transition: all 0.2s;
  transition: all 0.2s;
}
.hover-class1 {
  background-color: #F8F8F8;
}
.arror-right {
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #a9acb3;
  border-right: 3rpx solid #a9acb3;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}

